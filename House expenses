#include <stdio.h>
#include <string.h>

#define MAX 100   // maximum number of expenses
#define LEN 50    // max length of category name

struct Expense {
    char category[LEN];
    float amount;
};

int main() {
    struct Expense expenses[MAX];
    int n, i;
    float total = 0;

    printf("Enter number of expenses: ");
    scanf("%d", &n);

    if(n > MAX) {
        printf("Too many expenses! Max allowed is %d\n", MAX);
        return 1;
    }

    // Input expenses
    for(i = 0; i < n; i++) {
        printf("\nEnter category for expense %d: ", i + 1);
        scanf("%s", expenses[i].category);

        printf("Enter amount for %s: ", expenses[i].category);
        scanf("%f", &expenses[i].amount);

        total += expenses[i].amount;
    }

    // Display all expenses
    printf("\n--- House Expenses ---\n");
    for(i = 0; i < n; i++) {
        printf("%d. %s: %.2f\n", i + 1, expenses[i].category, expenses[i].amount);
    }

    // Display total
    printf("\nTotal Expenses = %.2f\n", total);

    return 0;
}
